<?xml version="1.0" encoding="utf-8" ?> 

<MainSettings>
  
  <Namespaces>
    <Scenes>MyGame.Scenes</Scenes>
  </Namespaces>
  
  <Directories>
    <Content>Content/</Content>
    <Audio>Audio/</Audio>
    <Fonts>Fonts/</Fonts>
  </Directories>

  <Viewport>
    <ResolutionX>320</ResolutionX>
    <ResolutionY>240</ResolutionY>
    <ViewportArea>FIT_BEST</ViewportArea>
    <AllowResizing>True</AllowResizing>
    <FullScreen>False</FullScreen>
    <WindowSizeX>320</WindowSizeX>
    <WindowSizeY>240</WindowSizeY>
  </Viewport>
  
  <Initiation>
    <StartupScene>Menu</StartupScene>
  </Initiation>

  <Defaults>
    <Layer>Main</Layer>
  </Defaults>
    
  <Layers>
    <Background>
      <SamplerState>LinearWrap</SamplerState>
    </Background>
    <Main>
      <Matrix>Camera</Matrix>
    </Main>
    <Foreground>
      <SamplerState>LinearWrap</SamplerState>
    </Foreground>
    <Overlay>
      <Matrix>Camera</Matrix>
    </Overlay>
    <Fade></Fade>
  </Layers>

</MainSettings>